<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="118dp"
        android:text="Select your bank:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/chase"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bank_of_america"
        android:layout_centerHorizontal="true"
        android:text="Chase" />

    <Button
        android:id="@+id/citibank"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chase"
        android:layout_centerHorizontal="true"
        android:text="Citibank" />

    <Button
        android:id="@+id/pnc"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/citibank"
        android:layout_centerHorizontal="true"
        android:text="PNC" />

    <Button
        android:id="@+id/suntrust"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pnc"
        android:layout_centerHorizontal="true"
        android:text="Suntrust" />

    <Button
        android:id="@+id/wells_fargo"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/suntrust"
        android:layout_centerHorizontal="true"
        android:text="Wells Fargo" />

    <Button
        android:id="@+id/other_bank"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wells_fargo"
        android:layout_centerHorizontal="true"
        android:text="Other bank" />

    <Button
        android:id="@+id/bank_of_america"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chase"
        android:layout_below="@+id/textView1"
        android:text="Bank of America" />

</RelativeLayout>